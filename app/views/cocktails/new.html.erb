<div class="container col-4 justify-content-center p-3">
  <h1>Add a new cocktail!</h1>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo %>
      <%#= f.input :bartenderName %>
      <%= f.input :bartender, label: 'Show us the bartender' %>
      <%= f.button :submit, class: "btn btn-primary btn-block" %>
    <% end %>
    <p class="basic-link p-3">
      <%= link_to "See all cocktails", cocktails_path %>
    </p>
</div>