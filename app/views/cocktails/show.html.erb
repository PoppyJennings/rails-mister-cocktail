<div class="container col-4 justify-content-center p-3">
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <h1><%= @cocktail.name %></h1>
  <p>
  This cocktail is made from...
  </p>

  <% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> - <%= dose.ingredient.name %></p>
  <% end %>


  <ul>
    <li><%= link_to "Add some doses to this cocktail", new_cocktail_dose_path(@cocktail) %>
    </li>
    <li>
    <%= link_to "See all cocktails", cocktails_path %>
    </li>
  </ul>
</div>